{% extends 'base.html.twig' %}

{% block title %}Product show{% endblock %}

{% block body %}

    <h1>Seznam produktů</h1>
    
<div class="row">

{% for product in products_view %}


<div class="col-lg-4 col-md-6 mb-4">

              <div class="card h-100">
                <div class="card-body">
                
                  <h4 class="card-title">
                    <a href="#"> {{ product.name }}</a>
                  </h4>
                  <h5>{{ product.price }} Kč</h5>
                  <p class="card-text">{{ product.description }}</p>
                  <a href="{{ path('product_detail', {'id': product.id}) }}"  class="btn btn-lg btn-block btn-outline-primary">Detail produktu</a>
                </div>
              </div>
            </div>
            
{% endfor %}
            

{% endblock %}